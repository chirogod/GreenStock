<Application x:Class="GreenStock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GreenStock"
             xmlns:viewmodels="clr-namespace:GreenStock.ViewModels"
             xmlns:views="clr-namespace:GreenStock.Views"
             Startup="AppStart">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ConfigViewModel}">
                <views:ConfigView/>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
