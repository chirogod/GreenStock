<Window x:Class="GreenStock.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenStock"
        xmlns:viewmodels="clr-namespace:GreenStock.ViewModels" xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <viewmodels:LoginViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="Visibility" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>


    <Border Background="White" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.2" BlurRadius="15"/>
        </Border.Effect>

        <Grid>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
                <fa:IconImage Icon="Lock" Width="40" Height="40" Foreground="#6A1B9A" Margin="0,0,0,10"/>
                <TextBlock Text="INICIAR SESIÓN" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="#333" 
                       Margin="0,0,0,5"/>
                <TextBlock Text="Accede a tu sistema POS" 
                       FontSize="14" 
                       Foreground="#888" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            </StackPanel>

            <StackPanel Width="300" VerticalAlignment="Center" Margin="0,80,0,0">

                <TextBlock Text="Usuario" FontWeight="Medium" Foreground="#333"/>
                <TextBox 
                     Text="{Binding User.Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Contraseña" FontWeight="Medium" Foreground="#333"/>
                <TextBox
                     Text="{Binding User.Password, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D32F2F" 
                       FontSize="13" 
                       Margin="0,0,0,20" 
                       TextWrapping="Wrap"/>

                <Button Content="ACCEDER AL SISTEMA" 
                    
                    Command="{Binding LoginCommand}" 
                    Height="50"
                    
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
